.userinfo {
  display: flex;
  flex-direction: column;
  padding: 50rpx 10rpx 0;
  align-items: center;
  background: #CC4053;
}

.userinfo-avatar image{
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #fff;
}

.logout {
  position: relative;
  margin-top: 1em;
  font-size: 14px;
  margin-top: 140px;
  background: #fff;
  text-align: center;
  color: #CC4053;
  height: 88rpx;
  line-height: 88rpx;
  /*border-bottom: 1rpx solid #d9d9d9;*/
  /*border-top: 1rpx solid #d9d9d9;*/
}

.user-bottom{
  display: flex;
  margin-top: 40px;
  width: 100%;
  height: 80px;
  background: #eee;
}

.user-left{
  position: relative;
  width: 50%;
  background: #CC4053;
  text-align: center;
  color: #fff;
  font-size: 16px;
  line-height: 20px;
}

.user-right{
  position: relative;
  width: 50%;
  background: #CC4053;
  text-align: center;
  color: #fff;
  font-size: 16px;
  line-height: 20px;
}

.user-right::before{
  content: '';
  width: 4rpx;
  height: 34px;
  border-right: 1rpx;
  background-color: #fff;
  position: absolute;
  left: 0;
  top: 4px;
  border-radius: 2px;
}

.top-text{
  font-size: 40rpx;
  font-weight: 600;
}

.bottom-text{
  font-size: 14px;
}

