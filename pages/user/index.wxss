.userinfo {
  display: flex;
  flex-direction: column;
  padding: 50rpx 0;
  align-items: center;
  background: #f4504d;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.tools{
  margin: 10px 0;
}
.section {
  line-height: 1.41176471;
  font-size: 16px;
  padding: 10px;
  background: #FFF;
  text-align: left;
  border-top: 1rpx solid #d9d9d9;
}



.logout {
  position: relative;
  margin-top: 1em;
  line-height: 1.41176471;
  font-size: 16px;
  padding: 10px 15px;
  background: #fff;
  text-align: center;
  border-bottom: 1rpx solid #d9d9d9;
  border-top: 1rpx solid #d9d9d9;
}
