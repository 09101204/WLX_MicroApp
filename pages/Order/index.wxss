.scroll-content{
  position: fixed;
  bottom: 0px;
  top: 44px;
  width: 100%;
  right: 0;
  left: 0;
  background: #eee;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.order-label{
  display: table-cell;
  vertical-align: middle;
}

.product-price{
    font-size: 26rpx;
    color:#e64340;
    font-weight: 600;
}

.product-count{
    font-size: 13px;
    color: #969696;
    padding-top: 3px; 
}

.checkcode{
  font: 18px;
}

.productItemDesc{
  margin-left: 10px;
}



